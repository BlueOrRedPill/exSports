<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_content">

    <include layout="@layout/toolbar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/size_05"
            android:background="@drawable/bg_white_corner">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="@dimen/size_10"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                    <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="@dimen/size_05"
                            android:src="@drawable/ex_profile_image"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    <TextView
                            android:id="@+id/profile_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="@dimen/text_12"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Name Lastname"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_12"
                            android:textColor="@color/white_50"
                            android:fontFamily="@font/opensans_regular"
                            android:text="EXPIRES IN : "/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_12"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/opensans_bold"
                            android:text="10 HOURS"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_05">
                    <ImageView
                            android:layout_width="@dimen/size_20"
                            android:layout_height="@dimen/size_20"
                            android:src="@drawable/ic_arrow_down"
                            android:tint="@color/green"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_margin="@dimen/size_05"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/opensans_regular"
                            android:textSize="@dimen/text_16"
                            android:text="GIVE"/>
                    <TextView
                            android:id="@+id/give_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_margin="@dimen/size_05"
                            android:textColor="@color/green"
                            android:fontFamily="@font/opensans_regular"
                            android:textSize="@dimen/text_16"
                            android:text="(3)"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_05"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/card_give_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:maxHeight="150dp"
                            android:src="@drawable/j03"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    <ImageView
                            android:id="@+id/card_give_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:maxHeight="150dp"
                            android:src="@drawable/j03"
                            android:scaleType="fitCenter"
                            android:visibility="visible"
                            android:adjustViewBounds="true"/>
                    <ImageView
                            android:id="@+id/card_give_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:maxHeight="150dp"
                            android:src="@drawable/j03"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@color/black_30"
                android:padding="@dimen/size_05"
                android:orientation="vertical"
                android:gravity="center">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_05">
                    <ImageView
                            android:layout_width="@dimen/size_20"
                            android:layout_height="@dimen/size_20"
                            android:src="@drawable/ic_arrow_up"
                            android:tint="@color/red_indicator"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_margin="@dimen/size_05"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/opensans_regular"
                            android:textSize="@dimen/text_16"
                            android:text="NEED"/>
                    <TextView
                            android:id="@+id/need_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_margin="@dimen/size_05"
                            android:textColor="@color/green"
                            android:fontFamily="@font/opensans_regular"
                            android:textSize="@dimen/text_16"
                            android:text="(3)"/>
                </LinearLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/need_content"
                            android:layout_alignEnd="@id/need_content"
                            android:layout_alignBottom="@id/need_content"
                            android:layout_alignTop="@id/need_content"
                            android:src="@drawable/bg_red_light"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    <LinearLayout
                            android:id="@+id/need_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_05"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                        <ImageView
                                android:id="@+id/card_need_1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:maxHeight="150dp"
                                android:src="@drawable/j03"
                                android:visibility="visible"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>
                        <ImageView
                                android:id="@+id/card_need_2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:maxHeight="150dp"
                                android:visibility="visible"
                                android:src="@drawable/j03"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>
                        <ImageView
                                android:id="@+id/card_need_3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:maxHeight="150dp"
                                android:visibility="gone"
                                android:src="@drawable/j03"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/confirm_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/size_05"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_14"
                        android:text="Do you really want to trade?"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/opensans_bold"/>
                <LinearLayout
                        android:id="@+id/confirm_btn"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_red_corner"
                        android:padding="@dimen/size_10"
                        android:layout_marginStart="@dimen/size_05"
                        android:layout_marginEnd="@dimen/size_05"
                        android:layout_marginTop="@dimen/size_10"
                        android:layout_marginBottom="@dimen/size_10"
                        android:gravity="center">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="CONFIRM"
                            android:textSize="@dimen/text_14"
                            android:padding="@dimen/size_05"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/opensans_bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>