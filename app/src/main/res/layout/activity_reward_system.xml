<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_content">

    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <include layout="@layout/toolbar"/>

        <LinearLayout
                android:id="@+id/add_coin"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom|end"
                android:background="@drawable/bg_white_corner"
                android:gravity="center"
                android:paddingTop="@dimen/size_05"
                android:paddingBottom="@dimen/size_05"
                android:paddingStart="@dimen/size_10"
                android:paddingEnd="@dimen/size_10"
                android:layout_margin="@dimen/size_05">
            <ImageView android:layout_width="20dp" android:layout_height="20dp"
                       android:src="@drawable/ic_excoin"
            android:layout_marginEnd="@dimen/size_05"/>
            <TextView

                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="@dimen/text_14"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/opensans_bold"
                    android:text="ADD"/>
        </LinearLayout>
    </FrameLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:padding="@dimen/size_15"
                      android:gravity="center">
            <ImageView android:layout_width="50dp" android:layout_height="50dp"
                       android:src="@drawable/ex_profile_image"
                       android:scaleType="fitCenter"
                       android:adjustViewBounds="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Points Accumulate"
                      android:textColor="@android:color/white"
                      android:textSize="16sp"
                      android:fontFamily="@font/opensans_regular"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_horizontal">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:includeFontPadding="false"
                          android:textSize="50sp"

                          android:paddingStart="@dimen/size_10"
                          android:textColor="@android:color/white"
                          android:fontFamily="@font/opensans_bold"
                          android:text="300"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:paddingStart="@dimen/size_10"
                          android:textColor="@android:color/white"
                          android:fontFamily="@font/opensans_regular"
                          android:text="EXS"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:background="@color/white_30"
                      android:paddingTop="@dimen/size_05"
                      android:paddingBottom="@dimen/size_05"
                      android:paddingStart="@dimen/size_10"
                      android:paddingEnd="@dimen/size_10">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:textSize="@dimen/text_12"
                      android:text="HISTORY"
                      android:padding="@dimen/size_05"
                      android:textColor="@color/white_50"
                      android:fontFamily="@font/opensans_regular"/>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:padding="@dimen/size_05"
                          android:layout_weight="1">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/text_12"
                          android:text="DATE"
                          android:textColor="@color/white_50"
                          android:fontFamily="@font/opensans_regular"/>
                <ImageView android:layout_width="12dp" android:layout_height="12dp"
                           app:srcCompat="@drawable/ic_half_square"
                           android:layout_margin="2dp"/>

            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:padding="@dimen/size_05"
                          android:layout_weight="1">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/text_12"
                          android:text="POINT"
                          android:textColor="@color/white_50"
                          android:fontFamily="@font/opensans_regular"/>
                <ImageView android:layout_width="12dp" android:layout_height="12dp"
                           app:srcCompat="@drawable/ic_half_square"
                           android:layout_margin="2dp"/>

            </LinearLayout>

        </LinearLayout>

        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout
                    android:id="@+id/reward_content"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="@dimen/size_05"
                    android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>