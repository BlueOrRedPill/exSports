<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_white_corner"
            android:layout_marginTop="@dimen/size_05"
            android:layout_marginBottom="@dimen/size_05"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_10"
            android:gravity="center">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_top_corner"
                android:padding="@dimen/size_05"
                android:gravity="center"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="@dimen/size_05"
                        android:src="@drawable/ex_profile_image"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>
                <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/text_12"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/opensans_bold"
                        android:text="Name Lastname"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/white_50"
                        android:fontFamily="@font/opensans_regular"
                        android:text="EXPIRES IN : "/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_12"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/opensans_bold"
                        android:text="10 HOURS"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_navigate_next"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_05"
                android:paddingBottom="@dimen/size_05"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/size_05"
                        android:paddingBottom="@dimen/size_05"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/card_give_1"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:src="@drawable/j03"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    <ImageView
                            android:id="@+id/card_give_2"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:src="@drawable/j03"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    <ImageView
                            android:id="@+id/card_give_3"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:src="@drawable/j03"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/size_05">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_exchange_white"
                            android:tint="@color/white_50"
                            android:rotation="90"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                </LinearLayout>

                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/need_content"
                            android:layout_alignEnd="@id/need_content"
                            android:layout_alignBottom="@id/need_content"
                            android:layout_alignTop="@id/need_content"
                            android:src="@drawable/bg_red_light"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    <LinearLayout
                            android:id="@+id/need_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/size_05"
                            android:paddingBottom="@dimen/size_05"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                        <ImageView
                                android:id="@+id/card_need_1"
                                android:layout_width="wrap_content"
                                android:layout_height="80dp"
                                android:src="@drawable/j03"
                                android:visibility="visible"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>
                        <ImageView
                                android:id="@+id/card_need_2"
                                android:layout_width="wrap_content"
                                android:layout_height="80dp"
                                android:visibility="visible"
                                android:src="@drawable/j03"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>
                        <ImageView
                                android:id="@+id/card_need_3"
                                android:layout_width="wrap_content"
                                android:layout_height="80dp"
                                android:src="@drawable/j03"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/size_05"
                    android:paddingEnd="@dimen/size_05"
                    android:gravity="center"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/size_05"
                        android:gravity="center">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GIVE "
                            android:textColor="@color/white_50"
                            android:fontFamily="@font/opensans_regular"
                            android:textSize="@dimen/text_10"/>
                    <TextView
                            android:id="@+id/give_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(3)"
                            android:textColor="@color/red_indicator"
                            android:fontFamily="@font/opensans_regular"
                            android:textSize="@dimen/text_12"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/size_05"
                        android:gravity="center">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NEED "
                            android:textColor="@color/white_50"
                            android:fontFamily="@font/opensans_regular"
                            android:textSize="@dimen/text_10"/>
                    <TextView
                            android:id="@+id/need_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(3)"
                            android:textColor="@color/red_indicator"
                            android:fontFamily="@font/opensans_regular"
                            android:textSize="@dimen/text_12"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>