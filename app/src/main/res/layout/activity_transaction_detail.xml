<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_content">

    <include layout="@layout/toolbar"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_white_corner"
                android:layout_margin="@dimen/size_05">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_white_top_corner">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="@dimen/size_15">

                    <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/img_success"
                            android:layout_margin="@dimen/size_05"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_10"
                            android:orientation="vertical">
                        <TextView
                                android:id="@+id/amount_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-20 EXS"
                                android:textSize="24sp"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/opensans_bold"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Completed"
                                android:textSize="@dimen/text_14"
                                android:textColor="@color/green"
                                android:fontFamily="@font/opensans_bold"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_05"
                        android:background="@color/white_30">
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/size_05"
                            android:orientation="horizontal">
                        <ImageView
                                android:layout_width="@dimen/size_20"
                                android:layout_height="@dimen/size_20"
                                android:layout_margin="@dimen/size_05"
                                android:src="@drawable/ic_repeat"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Repeat"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_12"
                                android:textColor="@android:color/white"/>
                    </LinearLayout>
                    <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/size_05"
                            android:layout_marginBottom="@dimen/size_05"
                            android:background="@color/white_50"/>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/size_05"
                            android:orientation="horizontal">
                        <ImageView
                                android:layout_width="@dimen/size_20"
                                android:layout_height="@dimen/size_20"
                                android:layout_margin="@dimen/size_05"
                                android:src="@drawable/ic_track"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Track"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_12"
                                android:textColor="@android:color/white"/>
                    </LinearLayout>
                    <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/size_05"
                            android:layout_marginBottom="@dimen/size_05"
                            android:background="@color/white_50"/>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/size_05"
                            android:orientation="horizontal">
                        <ImageView
                                android:layout_width="@dimen/size_20"
                                android:layout_height="@dimen/size_20"
                                android:layout_margin="@dimen/size_05"
                                android:src="@drawable/ic_share"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_12"
                                android:textColor="@android:color/white"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/detail_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10"
                    android:orientation="vertical"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>