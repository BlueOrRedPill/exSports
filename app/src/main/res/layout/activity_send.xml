<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_content">

    <include layout="@layout/toolbar"/>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/size_05">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_black_corner_30"
                    android:layout_margin="@dimen/size_05"
                    android:padding="@dimen/size_10">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/size_10">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14"
                            android:text="MY BALANCE"
                            android:textColor="@color/white_50"
                            android:fontFamily="@font/opensans_regular"/>
                    <TextView
                            android:id="@+id/balance_text"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:text="0 EXS"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/opensans_bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:textSize="@dimen/text_12"
                            android:text="0.00 USD"
                            android:id="@+id/usd_txt"
                            android:textColor="@color/white_50"
                            android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TRANSFERS"
                        android:paddingStart="@dimen/size_10"
                        android:paddingEnd="@dimen/size_10"
                        android:paddingTop="@dimen/size_05"
                        android:paddingBottom="@dimen/size_05"
                        android:textColor="@color/white_50"
                        android:textSize="@dimen/text_14"
                        android:fontFamily="@font/opensans_regular"/>

                <LinearLayout
                        android:id="@+id/wallet_header_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/size_05"
                        android:background="@drawable/bg_white_corner">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_10"
                            android:layout_margin="@dimen/size_05"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="USER ID OR EMAIL"
                                android:layout_margin="@dimen/size_05"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_12"/>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:animateLayoutChanges="true"
                                android:layout_margin="@dimen/size_05"
                                android:gravity="center"
                                android:orientation="vertical">
                            <EditText
                                    android:id="@+id/id_wallet_edt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="text"
                                    android:imeOptions="actionDone"
                                    android:padding="@dimen/size_10"
                                    android:drawableEnd="@drawable/ic_hint_qr_code"
                                    android:hint="Enter user id or email"
                                    android:textColorHint="@color/white_50"
                                    android:textSize="@dimen/text_14"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/opensans_regular"
                                    android:background="@drawable/bg_white_corner"/>



                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@color/black_30"
                            android:layout_marginTop="@dimen/size_05"
                            android:layout_marginBottom="@dimen/size_05"
                            android:padding="@dimen/size_15">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TRANSFER AMOUNT"
                                android:layout_margin="@dimen/size_05"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_12"
                                android:fontFamily="@font/opensans_regular"/>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_white_corner"
                                android:layout_margin="@dimen/size_05"
                                android:padding="@dimen/size_10"
                                android:gravity="center_horizontal">

                            <EditText
                                    android:id="@+id/amount_txt"
                                    android:layout_width="0dp"
                                    android:hint="0"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAlignment="textEnd"
                                    android:textColorHint="@color/white_50"
                                    android:background="@android:color/transparent"
                                    android:inputType="number"
                                    android:imeOptions="actionDone"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/opensans_regular"
                                    android:textSize="20sp"/>
                            <ImageView
                                    android:layout_width="@dimen/size_20"
                                    android:layout_height="@dimen/size_20"
                                    android:src="@drawable/ic_excoin"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"
                                    android:layout_margin="@dimen/size_05" />

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="@dimen/size_05"
                                android:gravity="center">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="My balance:"
                                    android:textColor="@color/white_50"
                                    android:fontFamily="@font/opensans_regular"
                                    android:textSize="@dimen/text_10"/>
                            <TextView
                                    android:id="@+id/balance2_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1000.00 EXS"
                                    android:textColor="@color/white_50"
                                    android:fontFamily="@font/opensans_bold"
                                    android:textSize="@dimen/text_10"/>
                            <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                            <TextView
                                    android:id="@+id/sub_usd_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00 USD"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/text_10"
                                    android:fontFamily="@font/opensans_regular"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/detail_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_15"
                            android:layout_marginBottom="@dimen/size_05"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="NETWORK FEE"
                                android:padding="@dimen/size_05"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/white_50"/>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_05"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="0 EXS"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/text_16"
                                    android:fontFamily="@font/opensans_regular"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FREE"
                                    android:textColor="@color/green"
                                    android:textSize="@dimen/text_16"
                                    android:fontFamily="@font/opensans_bold"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_05"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Amount to receive:"
                                    android:textColor="@color/white_50"
                                    android:textSize="@dimen/text_14"
                                    android:fontFamily="@font/opensans_regular"/>
                            <TextView
                                    android:id="@+id/amount_receive_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 EXS"
                                    android:textColor="@color/white_50"
                                    android:textSize="@dimen/text_14"
                                    android:fontFamily="@font/opensans_bold"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_05"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Total amount:"
                                    android:textColor="@color/white_50"
                                    android:textSize="@dimen/text_14"
                                    android:fontFamily="@font/opensans_bold"/>
                            <TextView
                                    android:id="@+id/totle_amount_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 EXS"
                                    android:textColor="@color/white_50"
                                    android:textSize="@dimen/text_14"
                                    android:fontFamily="@font/opensans_bold"/>
                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/confirm_btn"
                                android:layout_width="match_parent" android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_red_corner"
                                android:layout_marginTop="@dimen/size_20"
                                android:layout_marginBottom="@dimen/size_20"
                                android:padding="@dimen/size_10"
                                android:gravity="center">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    android:text="CONTINUE"
                                    android:textSize="@dimen/text_14"
                                    android:padding="@dimen/size_05"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/opensans_bold"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>