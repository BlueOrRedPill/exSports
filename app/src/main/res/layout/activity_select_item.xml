<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:coverflow="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_content">
    <include layout="@layout/toolbar"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:padding="@dimen/size_10">
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:orientation="vertical"
                      android:layout_margin="@dimen/size_05"
                      android:padding="@dimen/size_05"
                      android:background="@drawable/bg_white_corner"
                      android:layout_weight="1"
                      android:gravity="center_horizontal">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_vertical">
                <ImageView
                        android:id="@+id/profile_image_in"
                        android:layout_width="30dp" android:layout_height="30dp"
                        android:src="@drawable/ex_profile_image_list"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:padding="@dimen/size_05"
                              android:orientation="vertical">
                    <TextView
                            android:id="@+id/user_name_in"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="GUSTAVO"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_12"
                            android:fontFamily="@font/opensans_bold"/>
                    <!--<TextView-->
                            <!--android:layout_width="wrap_content" android:layout_height="wrap_content"-->
                            <!--android:text="8545"-->
                            <!--android:textColor="@color/white_50"-->
                            <!--android:textSize="@dimen/text_12"-->
                            <!--android:fontFamily="@font/opensans_regular"/>-->
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:padding="@dimen/size_05"
                              android:gravity="end|center_vertical"
                              android:orientation="vertical">
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:gravity="center">
                        <TextView
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="ITEM IN"
                                android:textColor="@color/green"
                                android:textSize="@dimen/text_12"
                                android:fontFamily="@font/opensans_bold"/>
                        <ImageView android:layout_width="18dp" android:layout_height="18dp"
                                   android:src="@drawable/ic_arrow_down"
                                   android:tint="@color/green"
                                   android:tintMode="multiply"
                                   android:scaleType="fitCenter"
                                   android:adjustViewBounds="true"
                                   android:layout_margin="2dp"/>
                    </LinearLayout>

                    <TextView
                            android:id="@+id/item_in_select"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="0 Cards"
                            android:textColor="@color/white_50"
                            android:textSize="@dimen/text_12"
                            android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>

            </LinearLayout>
            <com.android.sportnmedc.customviews.CustomViewPager
                    android:id="@+id/viewpager_item_in"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="80dp"
                    android:paddingLeft="80dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:clipToPadding="false"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:orientation="vertical"
                      android:background="@drawable/bg_white_corner"
                      android:layout_weight="1"
                      android:layout_margin="@dimen/size_05"
                      android:padding="@dimen/size_05"
                      android:gravity="center_horizontal">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_vertical">
                <ImageView
                        android:id="@+id/profile_image_out"
                        android:layout_width="30dp" android:layout_height="30dp"
                        android:src="@drawable/ex_profile_image"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:padding="@dimen/size_05"
                              android:orientation="vertical">
                    <TextView
                            android:id="@+id/user_name_out"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="Ekachai"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_12"
                            android:fontFamily="@font/opensans_bold"/>
                    <!--<TextView-->
                            <!--android:layout_width="wrap_content" android:layout_height="wrap_content"-->
                            <!--android:text="8545"-->
                            <!--android:textColor="@color/white_50"-->
                            <!--android:textSize="@dimen/text_12"-->
                            <!--android:fontFamily="@font/opensans_regular"/>-->
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:padding="@dimen/size_05"
                              android:gravity="end|center_vertical"
                              android:orientation="vertical">
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:gravity="center">
                        <TextView
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="ITEM OUT"
                                android:textColor="@color/red_indicator"
                                android:textSize="@dimen/text_12"
                                android:fontFamily="@font/opensans_bold"/>
                        <ImageView android:layout_width="18dp" android:layout_height="18dp"
                                   android:src="@drawable/ic_arrow_up"
                                   android:tint="@color/red_indicator"
                                   android:scaleType="fitCenter"
                                   android:adjustViewBounds="true"
                                   android:layout_margin="2dp"/>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/item_out_select"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="0 Cards"
                            android:textColor="@color/white_50"
                            android:textSize="@dimen/text_12"
                            android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>

            </LinearLayout>
            <com.android.sportnmedc.customviews.CustomViewPager
                    android:id="@+id/viewpager_item_out"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="80dp"
                    android:paddingLeft="80dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:clipToPadding="false"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/add_item"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_red_corner"
                android:layout_margin="@dimen/size_05"
                android:padding="@dimen/size_10"
                android:gravity="center">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="NEXT"
                      android:textSize="@dimen/text_14"
                      android:padding="@dimen/size_05"
                      android:textColor="@android:color/white"
                      android:fontFamily="@font/opensans_bold"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>