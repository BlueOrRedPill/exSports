<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_content">


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/size_05">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_white_corner"
                android:layout_margin="@dimen/size_05"
                android:padding="@dimen/size_10">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/size_10">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textSize="@dimen/text_14"
                        android:text="@string/my_balance"
                        android:textColor="@color/white_50"
                        android:fontFamily="@font/opensans_regular"/>
                <TextView
                        android:id="@+id/balance_text"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textSize="24sp"
                        tools:text="1000.00 EXS"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/opensans_bold"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textSize="@dimen/text_14"
                        android:text="0.00 USD"
                        android:textColor="@color/white_50"
                        android:fontFamily="@font/opensans_regular"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_10">
                <LinearLayout
                        android:id="@+id/send_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:src="@drawable/img_send"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:textSize="@dimen/text_12"
                            android:text="Send"
                            android:textColor="@color/white_50"
                            android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/receive_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:src="@drawable/img_receive"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:textSize="@dimen/text_12"
                            android:text="Receive"
                            android:textColor="@color/white_50"
                            android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/buy_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:src="@drawable/img_buy"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:textSize="@dimen/text_12"
                            android:text="Buy EXS"
                            android:textColor="@color/white_50"
                            android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/redeem_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:src="@drawable/img_redeem"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:textSize="@dimen/text_12"
                            android:text="Redeem"
                            android:textColor="@color/white_50"
                            android:fontFamily="@font/opensans_regular"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_white_corner"
                android:layout_margin="@dimen/size_05"
                android:padding="@dimen/size_10">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="@dimen/text_14"
                    android:paddingTop="@dimen/size_05"
                    android:paddingBottom="@dimen/size_05"
                    android:paddingStart="@dimen/size_10"
                    android:paddingEnd="@dimen/size_10"
                    android:text="LATEST TRANSACTIONS"
                    android:textColor="@color/white_50"
                    android:fontFamily="@font/opensans_regular"/>
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:id="@+id/transaction_container"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="vertical">
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>