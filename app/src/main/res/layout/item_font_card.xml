<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="380dp"
                android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/bg_card"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:src="@drawable/bg_card_red"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

    <LinearLayout
            android:layout_alignEnd="@id/bg_card"
            android:layout_alignBottom="@id/bg_card"
            android:layout_alignStart="@id/bg_card"
            android:layout_alignTop="@id/bg_card"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="50dp"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">


        <!--<View android:layout_width="0dp" android:layout_height="10dp"/>-->

        <FrameLayout android:layout_width="wrap_content" android:layout_height="0dp"
                     android:layout_weight="5.5">
            <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                       android:src="@drawable/ex_sporter"
                       android:scaleType="centerCrop"
                       android:layout_gravity="bottom|center_horizontal"
                       android:adjustViewBounds="true"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="35dp"
                          android:padding="@dimen/size_05"
                          android:gravity="center_horizontal">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="center">
                    <ImageView android:layout_width="30dp" android:layout_height="30dp"
                               android:src="@drawable/ex_thai_flag"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/white_50"
                              android:text="ITL"
                              android:textSize="@dimen/text_16"
                              android:fontFamily="@font/opensans_bold"/>
                </LinearLayout>
                <com.android.sportnmedc.helpers.VerticalTextView android:layout_width="0dp"
                                                                 android:layout_height="wrap_content"
                                                                 android:layout_weight="1"
                                                                 android:singleLine="true"
                                                                 android:text="MOTOR RACING"
                                                                 android:textSize="18sp"
                                                                 android:fontFamily="@font/opensans_bold"
                                                                 android:textColor="@color/white_50"/>

            </LinearLayout>

        </FrameLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="2"
                      android:padding="@dimen/size_10"
                      android:orientation="vertical"
                      android:gravity="center">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:lines="2"
                      android:maxLines="2"
                      android:padding="@dimen/size_10"
                      android:layout_gravity="center"
                      android:text="BUAKAW BANCHAMEK"
                      android:textColor="@android:color/white"
                      android:fontFamily="@font/opensans_bold"
                      android:textSize="20sp"/>
            <ImageView android:layout_width="80dp" android:layout_height="wrap_content"
                       android:scaleType="fitCenter"
                       android:adjustViewBounds="true"
                       android:src="@drawable/ex_logo_sport_card"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>