<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white_30"
              android:padding="@dimen/size_10"
              android:gravity="center"
              android:layout_marginStart="@dimen/size_05"
              android:layout_marginEnd="@dimen/size_05"
              android:layout_marginTop="2dp"
              android:layout_marginBottom="2dp">

    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="3"
                  android:gravity="center_vertical">
        <ImageView android:layout_width="25dp" android:layout_height="wrap_content"
                   android:src="@drawable/ex_collection_7"
                   android:scaleType="fitCenter"
                   android:layout_margin="@dimen/size_05"
                   android:adjustViewBounds="true"/>

        <TextView
                android:id="@+id/name_txt"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="@dimen/text_12"
                android:text="NAME"
                android:textColor="@android:color/white"
                android:fontFamily="@font/opensans_regular"/>

    </LinearLayout>

    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              android:layout_weight="1"
              android:padding="@dimen/size_05"
              android:gravity="center_vertical"
              android:textSize="10sp"
              android:textColor="@color/white_50"
              android:fontFamily="@font/opensans_regular"
              android:text="19 may 2018,12:37 pm"/>
    <TextView
            android:id="@+id/point_txt"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/text_14"
            android:textColor="#50cc25"
            android:fontFamily="@font/opensans_bold"
            android:text="+50"/>

</LinearLayout>