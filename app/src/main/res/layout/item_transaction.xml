<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/size_15"
              android:background="#00111111">

    <LinearLayout android:layout_width="30dp" android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_margin="@dimen/size_05">
        <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:src="@drawable/ex_profile_image_list"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

    </LinearLayout>
    <LinearLayout android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="7"
                  android:padding="@dimen/size_05"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_weight="2">
                <TextView
                        android:id="@+id/name_txt"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:text="NAME"
                        android:textSize="@dimen/text_12"
                        android:textColor="@android:color/white"/>
                <TextView
                        android:id="@+id/accuired_from"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Acquired from a Cuin."
                        android:textColor="@color/white_50"
                        android:textSize="@dimen/text_10"
                        android:fontFamily="@font/opensans_bold"/>
                <TextView
                        android:id="@+id/date_txt"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Acquired from a Cuin."
                        android:textColor="@color/white_50"
                        android:textSize="8sp"
                        android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_weight="1">
                <TextView
                        android:id="@+id/transaction_id"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="#23608699"
                        android:textColor="@color/white_50"
                        android:textSize="@dimen/text_12"
                        android:fontFamily="@font/opensans_bold"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center_vertical">
                    <ImageView android:layout_width="15dp" android:layout_height="15dp"
                               android:src="@drawable/ic_excoin"
                               android:layout_margin="5dp"/>
                    <TextView
                            android:id="@+id/price_txt"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="100 EXS"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_12"
                            android:fontFamily="@font/opensans_bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/transaction_code"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="@color/red_indicator"
                android:text=""
                android:fontFamily="@font/opensans_regular"
                android:textSize="@dimen/text_10"/>
    </LinearLayout>

</LinearLayout>