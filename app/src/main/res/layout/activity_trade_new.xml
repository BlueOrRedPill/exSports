<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_content">

    <include layout="@layout/toolbar"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="@dimen/size_05"
                android:background="@drawable/bg_white_corner">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:padding="@dimen/size_10"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                        <ImageView
                                android:id="@+id/profile_image"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="@dimen/size_05"
                                android:src="@drawable/ex_profile_image"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>
                        <TextView
                                android:id="@+id/profile_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textSize="@dimen/text_12"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/opensans_bold"
                                android:text="Name Lastname"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|end">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/white_50"
                                android:fontFamily="@font/opensans_regular"
                                android:text="EXPIRES IN : "/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_12"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/opensans_bold"
                                android:text="10 HOURS"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                        <ImageView
                                android:layout_width="@dimen/size_20"
                                android:layout_height="@dimen/size_20"
                                android:src="@drawable/ic_arrow_down"
                                android:tint="@color/green"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/size_05"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_14"
                                android:text="GIVE"/>
                        <TextView
                                android:id="@+id/give_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/size_05"
                                android:textColor="@color/green"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_14"
                                android:text="(0)"/>
                    </LinearLayout>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_10"
                            android:textColor="@color/white_50"
                            android:text="Maximum: 3 Cards"
                            android:fontFamily="@font/opensans_regular"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_05"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                        <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="150dp">
                            <ImageView
                                    android:id="@+id/card_give_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:maxHeight="150dp"
                                    android:src="@drawable/img_add_card"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"/>
                            <ImageView
                                    android:id="@+id/card_give_remove_1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/img_remove"
                                    android:layout_gravity="end"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"/>
                        </FrameLayout>

                        <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="150dp">
                            <ImageView
                                    android:id="@+id/card_give_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:maxHeight="150dp"
                                    android:src="@drawable/img_add_card"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"/>
                            <ImageView
                                    android:id="@+id/card_give_remove_2"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/img_remove"
                                    android:layout_gravity="end"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"/>
                        </FrameLayout>
                        <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="150dp">
                            <ImageView
                                    android:id="@+id/card_give_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:maxHeight="150dp"
                                    android:src="@drawable/img_add_card"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"/>
                            <ImageView
                                    android:id="@+id/card_give_remove_3"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/img_remove"
                                    android:layout_gravity="end"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black_30"
                    android:padding="@dimen/size_05"
                    android:orientation="vertical"
                    android:gravity="center">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                        <ImageView
                                android:layout_width="@dimen/size_20"
                                android:layout_height="@dimen/size_20"
                                android:src="@drawable/ic_arrow_up"
                                android:tint="@color/red_indicator"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/size_05"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_14"
                                android:text="NEED"/>
                        <TextView
                                android:id="@+id/need_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="@dimen/size_05"
                                android:textColor="@color/green"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_14"
                                android:text="(3)"/>
                    </LinearLayout>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_10"
                            android:textColor="@color/white_50"
                            android:text="Maximum: 3 Cards"
                            android:fontFamily="@font/opensans_regular"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_05"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                        <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="150dp">

                            <ImageView
                                    android:id="@+id/card_need_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:maxHeight="150dp"
                                    android:src="@drawable/img_add_card"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"/>
                            <ImageView
                                    android:id="@+id/card_need_remove_1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/img_remove"
                                    android:layout_gravity="end"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"/>
                        </FrameLayout>

                        <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="150dp">

                            <ImageView
                                    android:id="@+id/card_need_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:maxHeight="150dp"
                                    android:src="@drawable/img_add_card"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"/>
                            <ImageView
                                    android:id="@+id/card_need_remove_2"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/img_remove"
                                    android:layout_gravity="end"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"/>
                        </FrameLayout>
                        <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="150dp">
                            <ImageView
                                    android:id="@+id/card_need_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:maxHeight="150dp"
                                    android:src="@drawable/img_add_card"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"/>
                            <ImageView
                                    android:id="@+id/card_need_remove_3"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/img_remove"
                                    android:layout_gravity="end"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"/>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/confirm_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/size_05"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14"
                            android:text=""
                            android:textColor="@color/white_50"
                            android:fontFamily="@font/opensans_bold"/>
                    <LinearLayout
                            android:id="@+id/confirm_btn"
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_red_corner"
                            android:padding="@dimen/size_10"
                            android:layout_marginStart="@dimen/size_05"
                            android:layout_marginEnd="@dimen/size_05"
                            android:layout_marginTop="@dimen/size_10"
                            android:layout_marginBottom="@dimen/size_10"
                            android:gravity="center">

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="CREATE TRADE"
                                android:textSize="@dimen/text_14"
                                android:padding="@dimen/size_05"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/opensans_bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>